@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
    string ActionName = "DepartmentDetails";
    string viewDataMessage =ViewData["Message"] as string; // Enforce Type Safety -> Requires Type Convert[Strongly Typr Laguage]
    string viewBagMessage = ViewBag.Message;

}

@* <div class="alert alert-primary">
    @TempData.Message   
</div>
 *@
<h1 class="mb-1">All Departments</h1>

<a asp-controller="Department" asp-action="Create" class="btn btn-primary mb-3">Create New Department</a>

@if (Model.Count() > 0)
{
    <table class="  table table-striped table-info table-hover table-bordered table-lg">
        <tr>
            <th>@Html.DisplayNameFor(D => D.Code)</th>
            <th>@Html.DisplayNameFor(D => D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>

        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>

                    <partial name="_ButtonsPartial" model="@new ButtonsPartialViewModel (@department.Id,@ActionName)"></partial>

                    <td class="ModelHolder">
                        <!-- Button Modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            <i class="fas fa-trash me-auto"></i> Delete
                        </button>
                  
                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content " >
                                    <div class="modal-header d-flex justify-content-between align-items-center ">
                                        <div>
                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Department</h1>
                                        </div>
                                        <div > 

                                            <button type="button" class="btn fa-solid fa-x fa-xl" style="color: #ff0000;" data-bs-dismiss="modal" aria-label="close"></button>                                    
                                        </div>
                                    </div>

                                    <div class="modal-body border border-2 border-primary-subtle border-4 rounded-4 bg-primary-subtle p-2 m-2">
                                        @await Html.PartialAsync("PartialViews/DepartmentDetailsDeletePartial", @department)
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                      
                                          <form asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" >
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>  

                                        
                                    </div>

                                </div>
                            </div>
                        </div>


                    </td>

                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Departments :(</h3>
    </div>
}



