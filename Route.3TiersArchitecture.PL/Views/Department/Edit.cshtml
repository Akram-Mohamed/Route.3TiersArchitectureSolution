@model Department
@{
    ViewData["Title"] = "Edit";
    string ActionName = "Save";
}

<h1 class="mb-2">Edit Department</h1>

<form asp-action="Edit">

    <partial name="PartialViews/DepartmentEditCreatePartial" model="new DepartmentEditCreateDetailsModel ( @Model, ActionName)"></partial>
  

    <div class="mt-3">
        <input type="submit" value="Save" class="btn btn-outline-primary" />
        <a asp-action="Index" class="btn btn-outline-dark px-5">Back To List</a>

    </div>

</form>


@section ScriptValidationSection {

    <partial name="_ValidationScriptsPartial"></partial>

}