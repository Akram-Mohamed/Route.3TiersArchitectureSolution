@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Authlayout.cshtml";
}



<div class="container" id="container">
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="Login">
                <h1>Sign in</h1>

                <div class="social-container ">
                    <a href="#" class="social"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#" class="social"><i class="fa-brands fa-google"></i></a>
                    <a href="#" class="social"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>or use your account</span>
                <input class="text email" type="email" asp-for="Email"  placeholder="Email" required="" />
                <input class="text" type="password" asp-for="Password" placeholder="Password" required="" />
                <input asp-for="RememberMe"  type="checkbox" placeholder="Password" />
                <span class="mt-1">Remember me</span>

                <a asp-action="ForgetPassword">Forgot your password?</a>
                @* <button class="button">Sign In</button> *@
                <input type="submit" value="SignIn">
            </form>


            <p>You don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
            <p><a asp-action="ForgetPassword">Forget Your Password? </a></p>
        </div>
    </div>

</div>
@section ScriptValidationSection {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

