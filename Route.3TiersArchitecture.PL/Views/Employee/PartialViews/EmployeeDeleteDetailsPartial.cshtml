@model EmployeeResponseViewModel


<div class="">

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control " readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Age"></label>
        <input asp-for="@Model.Age" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Address"></label>
        <input asp-for="@Model.Address" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Salary"></label>
        <input asp-for="@Model.Salary" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.PhoneNumber"></label>
        <input asp-for="@Model.PhoneNumber" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.HiringDate"></label>
        <input asp-for="@Model.HiringDate" class="form-control" readonly />
    </div>


    <div>
        @if (@Model.Gender.Equals(Route._3TiersArchitecture.DAL.Models_Services_.Gender.Male))
        {
            <div class="border rounded-2  bg-success-subtle py-2">

                <div class="form-check-inline form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked disabled>
                    <label class="form-check-label" for="flexSwitchCheckChecked">Male</label>
                </div>
                <div class="form-check-inline form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" disabled>
                    <label class="form-check-label" for="flexSwitchCheckChecked">Female</label>
                </div>
            </div>
        }
        else
        {
            <div class="form-check-inline form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" disabled>
                <label class="form-check-label" for="flexSwitchCheckChecked">Male</label>
            </div>

            <div class="form-check-inline form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked disabled>
                <label class="form-check-label" for="flexSwitchCheckChecked">Female</label>
            </div>

        }
    </div>

   
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" asp-for="@Model.ISActive" id="flexSwitchCheckCheckedDisabled" disabled>
        <label class="form-check-label" asp-for="@Model.ISActive"></label>
    </div>
</div>



