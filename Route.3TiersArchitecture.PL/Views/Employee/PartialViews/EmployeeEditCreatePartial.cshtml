@model EmployeeViewModel
@inject IUnitOfWork _departmentRepo;
@* IDepartmentRepository _departmentRepo;
 *@
@{
    var Departments = new SelectList(_departmentRepo.Repository<Department>().GetAll(), nameof(Department.Id), nameof(Department.Name));
    string EmpMaleGender = Model?.Gender.ToString();

}
<div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control " />
        <span asp-validation-for="@Model.Name" class="text-danger "></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Age"></label>
        <input asp-for="@Model.Age" class="form-control" />
        <span asp-validation-for="@Model.Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Address"></label>
        <input asp-for="@Model.Address" class="form-control" />
        <span asp-validation-for="@Model.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Salary"></label>
        <input asp-for="@Model.Salary" class="form-control" />
        <span asp-validation-for="@Model.Salary" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label class="col-form-label" asp-for="@Model.PhoneNumber"></label>
        <input asp-for="@Model.PhoneNumber" class="form-control" />
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.HiringDate"></label>
        <input asp-for="@Model.HiringDate" class="form-control" />
        <span asp-validation-for="@Model.HiringDate" class="text-danger"></span>
    </div>


    <div>
        <div class="border rounded-2  bg-success-subtle py-2 my-2">

            @if (string.IsNullOrEmpty(EmpMaleGender))
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio1" value="1">
                    <label class="form-check-label" for="inlineRadio1">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio2" value="2">
                    <label class="form-check-label" for="inlineRadio2">Femle</label>
                </div>
            }
            else if (@Model.Gender.Equals(Route._3TiersArchitecture.DAL.Models_Services_.Gender.Male))
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio1" value="1" checked>
                    <label class="form-check-label" for="inlineRadio1">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio2" value="2">
                    <label class="form-check-label" for="inlineRadio2">Femle</label>
                </div>
            }
            else
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio1" value="1">
                    <label class="form-check-label" for="inlineRadio1">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio2" value="2" checked>
                    <label class="form-check-label" for="inlineRadio2">Femle</label>
                </div>
            }


        </div>
    </div>


    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" asp-for="@Model.ISActive" id="flexSwitchCheckChecked">
        <label class="form-check-label" asp-for="@Model.ISActive"></label>
    </div>


    <div class="form-group">

        <label class="col-form-label" asp-for="Department"></label>
        <select class="form-control" asp-for="DepartmentId" asp-items="@Departments">
            <option value="@null">   -- Select Department-- </option>
        </select>

    </div>

    <div>
        <label class="col-form-label text-primary fs-4 fw-medium" @* asp-for="Image" *@> Profile Picture: </label>
        <input type="File" asp-for="Image" class="form-control-file" />
    </div>


</div>