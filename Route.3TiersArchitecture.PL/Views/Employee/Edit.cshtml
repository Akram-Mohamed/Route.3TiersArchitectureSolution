@model Employee
@{
    ViewData["Title"] = "Edit";

}

<h1 class="mb-3">Edit  Employee</h1>



<form asp-action="Edit" class="border border-2 border-primary-subtle border-4 rounded-4 bg-primary-subtle p-3">

    <div>
        @await Html.PartialAsync("PartialViews/EmployeeEditCreatePartial", @Model)
    </div>

    <div class="mt-3">
        <input type="submit" value="Save" class="btn btn-outline-primary" />
        <a asp-action="Index" class="btn btn-outline-dark px-5">Back To List</a>

    </div>

</form>


@section ScriptValidationSection {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}