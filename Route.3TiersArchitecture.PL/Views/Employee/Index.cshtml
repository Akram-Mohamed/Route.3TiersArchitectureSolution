@model IEnumerable<Employee>

@{

    ViewData["Title"] = "Index";
    string ActionName = "EmployeeDetails";

}

<h1 class="mb-2">All Employee</h1>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary mb-2">Create New Employee</a>


<div class="row justify-content-center align-items-center mt-3 mb-4">
    <form asp-action="Index" class="row col-8 offset-2">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="  table table-striped table-info table-hover table-bordered table-lg">
        <tr>

            <th>@Html.DisplayNameFor(E => E.Name)</th>
            <th>@Html.DisplayNameFor(E => E.Age)</th>
            <th>@Html.DisplayNameFor(E => E.Email)</th>
            <th>@Html.DisplayNameFor(E => E.Salary)</th>
            <th>@Html.DisplayNameFor(E => E.IsActive)</th>
            <th>@Html.DisplayNameFor(E => E.Gender)</th>
            @* <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th> *@
            @*  <th>@Html.DisplayNameFor(E => E.EmpType)</th>
            <th>@Html.DisplayNameFor(E => E.HiringDate)</th> *@
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>

        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.Age</td>
                    <td>@Html.DisplayFor(M => Employee.Email)</td>
                    <td>@Html.DisplayFor(M => Employee.Salary)</td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" asp-for="@Employee.IsActive" id="flexSwitchCheckCheckedDisabled" disabled>
                            <label class="form-check-label" asp-for="@Employee.IsActive"></label>
                        </div>
                        
                    </td>   
                    <td>
                        @if (@Employee.Gender == Route._3TiersArchitecture.DAL.Models_Services_.Gender.Male)
                        { <p>Male</p> }
                        else
                        {
                            <p>FeNothing</p>
                        }
                    </td>

                    <partial name="_ButtonsPartial" model="@new ButtonsPartialViewModel (@Employee.Id,@ActionName)"></partial>

                    <td class="ModelHolder">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            <i class="fas fa-trash me-auto"></i> Delete
                        </button>

                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content ">
                                    <div class="modal-header d-flex justify-content-between align-items-center ">
                                        <div>
                                            <h1 class="modal-title fs-5 text-black" id="staticBackdropLabel">Delete Employee</h1>
                                        </div>
                                        <div>

                                            <button type="button" class="btn fa-solid fa-x fa-xl" style="color: #ff0000;" data-bs-dismiss="modal" aria-label="close"></button>
                                        </div>
                                    </div>

                                    <div class="modal-body">

                                        <div class="modal-body border border-2 border-primary-subtle border-4 rounded-4 bg-primary-subtle p-2 m-2">
                                            @await Html.PartialAsync("PartialViews/EmployeeDeleteDetailsPartial", @Employee)
                                        </div>

                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                        <form asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>


                                    </div>
                                </div>
                            </div>
                        </div>


                    </td>

                </tr>
            }
        </tbody>




    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Employee Stored Yet :(</h3>
    </div>
}





